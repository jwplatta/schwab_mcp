#!/usr/bin/env ruby

# frozen_string_literal: true

require 'pry'
require 'dotenv'
require 'schwab_rb'

Dotenv.load

required_vars = [
  'SCHWAB_API_KEY',
  'SCHWAB_APP_SECRET',
  'SCHWAB_CALLBACK_URI',
  'TOKEN_PATH'
]
missing_vars = required_vars.select { |var| ENV[var].nil? || ENV[var].empty? }

unless missing_vars.empty?
  puts "âŒ Missing required environment variables: #{missing_vars.join(', ')}"
  exit 1
end

token_path = ENV['TOKEN_PATH']
puts "Token path: #{token_path}"

if File.exist?(token_path)
  puts "ğŸ—‘ï¸  Deleting existing token file: #{token_path}"
  File.delete(token_path)
  puts "âœ… Token file deleted successfully"
else
  puts "â„¹ï¸  Token file doesn't exist at: #{token_path}"
end

refresh_script_path = File.join(File.dirname(__FILE__), 'schwab_token_refresh')
puts "ğŸ”„ Calling token refresh script: #{refresh_script_path}"

begin
  result = system(refresh_script_path)
  if result
    puts "âœ… Token reset and refresh completed successfully"
  else
    puts "âŒ Token refresh script failed"
    exit 1
  end
rescue => e
  puts "âŒ Failed to execute token refresh script: #{e.message}"
  exit 1
end
