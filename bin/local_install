#!/usr/bin/env bash

set -e  # Exit on any error

echo "Building schwab_mcp gem..."

gem build schwab_mcp.gemspec

mkdir -p pkg

mv schwab_mcp-*.gem pkg/

GEM_FILE=$(ls pkg/schwab_mcp-*.gem | head -n1)

echo "Installing gem: $GEM_FILE"

gem install "$GEM_FILE"

echo "Successfully installed schwab_mcp gem!"